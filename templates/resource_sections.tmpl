                    {% if r.get('student') %}
                        <span class="resource-credit">{{ r['student'] }}</span>
                    {% end %}
                </li>
            {% end %}
        {% end %}
        </ul>
    </div>
    <div class="col-md-4">
        <h4><i class="fa-brands fa-python"></i> Notebooks</h4>
        <ul class="resource-list">
        {% for r in resources %}
            {% if r['type'] == 'notebook' %}
