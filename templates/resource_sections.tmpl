<div class="row">
    <div class="col-md-4">
        <h4><i class="fa-solid fa-book"></i> Readings</h4>
        <ul class="resource-list">
        {% for r in resources %}
            {% if r['type'] == 'reading' %}
                <li>
                    {% if r.get('primary') %}
                        <i class="fa-solid fa-star" style="color: #f0ad4e;"></i>
                    {% else %}
                        <span style="display:inline-block; width: 1em;">&bull;</span>
                    {% end %}
                    <a href="{{ r['link'] }}">{{ r['name'] }}</a>
                    {% if r.get('student') %}
                        <span class="resource-credit">{{ r['student'] }}</span>
                    {% end %}
                </li>
            {% end %}
        {% end %}
        </ul>
    </div>
    <div class="col-md-4">
        <h4><i class="fa-solid fa-video-camera"></i> Videos</h4>
        <ul class="resource-list">
        {% for r in resources %}
            {% if r['type'] == 'video' %}
